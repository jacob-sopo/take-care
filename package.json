{
  "name": "take-care",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "build": {
    "appId": "com.electron.takecare",
    "productName": "takecare",
    "copyright": "Copyright Â© 2020 @sopo",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/img/redCat.png"
    },
    "win": {
      "icon": "assets/img/redCat.png"
    },
    "files": [
      "node_modules/**/*",
      "package.json",
      "build/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "cross-env": "^7.0.2",
    "electron-is-dev": "^1.1.0",
    "node-sass": "^4.13.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0"
  },
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pp": "cross-env REACT_APP_PP=true electron .",
    "postinstall": "electron-builder install-app-deps",
    "pre-electron-pack": "yarn build",
    "electron-pack": "electron-builder build --dir --windows"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "concurrently": "^5.1.0",
    "electron": "^18.3.7",
    "electron-builder": "^22.4.0",
    "wait-on": "^4.0.1"
  }
}
